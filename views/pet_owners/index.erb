
<h1>Adoptions</h1>

<table>
  <tr>
    <th>Pet  </th>
    <th>Owner </th>
    <th></th>
  </tr>
  <% for petowner in @petowners %>
  <tr>
    <td><%=Pet.find(petowner.pet_id).name %></td>
    <td><%=Owner.find(petowner.owner_id).name%></td>
    <td><form class="deleteadoption" action="/pet_owners/<%=petowner.id%>/delete" method="POST">
      <input type="submit" value="Delete" />
    </form></td>
  </tr>
  <% end %>
</table>
