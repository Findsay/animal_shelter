<h1>All Pets at Shelter</h1>


<% @pets.each do |pet| %>
<p> Name: <%= pet.name %></p>
<p> Breed: <%= pet.breed %> </p>
<p> Sex: <%= pet.gender %> </p>
<p> Adoptable: <%= pet.adoptable %> </p>
<p> Admission Date: <%= pet.date_arrived %> </p>
<a href="/pets/<%=pet.id%>">View</a>

<a href="/pet_owners/<%=pet.id%>/assign">Assign Owner</a>

<form action="/pets/<%= pet.id %>/delete" method="POST">
  <input type="submit" value="Delete" />
</form>
<hr>

<% end %>
