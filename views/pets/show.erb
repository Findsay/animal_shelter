<div class="headingdiv">
<h1 class="showpetheading"><%= @pet.name %></h1>
<form class="deletepetform" action="/pets/<%=@pet.id %>/delete" method="POST">
  <input class="deletepet" type="submit" value="Delete" />
</form>
</div>


<div class="showpetcontainer">

<img src="../<%= @pet.picture%>" alt=""
<div class="showpetdetails">
<p> Breed: <%= @pet.breed %> </p>
<p> Sex: <%= @pet.gender %> </p>
<p> Admission Date: <%= @pet.date_arrived %> </p>
<p> Adoptable: <%= @pet.adoptable %> </p>
<p> Trained: <%= @pet.trained %> </p>
<div class=showpetbuttons>
<p class="showpetpara"><a class="showpeteditbutton" href="/pets/<%=@pet.id%>/edit">Edit Details</a>
</p>
<% if @pet.owner == "No Owner" %>
<p><a class ="assignpet" href="/pet_owners/<%=@pet.id%>/assign">Assign Owner</a></p>
<% end %>
</div>

</div>
</div>
